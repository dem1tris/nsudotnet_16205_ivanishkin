@model task4_effective_worker.Models.Employee


@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<h4>Projects</h4>
<form asp-action="AssignProject" asp-route-employeeId="@Model.EmployeeId">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Unassigned projects</label>
                @Html.DropDownList("ProjectId", ViewBag.UnassignedProjects as SelectList, new { @class = "form-control" })
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<table class="table">
    <thead>
    <tr>
        <th>
            Title
        </th>
        <th>
            Cost
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    
    @foreach (var item in Model.Projects) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                <form asp-action="UnassignProject" asp-route-projectId="@item.ProjectId" asp-route-employeeId="@Model.EmployeeId">
                    <input type="hidden" asp-for="EmployeeId" />
                    <input type="submit" value="Unassign" class="btn btn-danger" />
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
